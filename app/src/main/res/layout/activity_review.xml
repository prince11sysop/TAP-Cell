<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context=".Profile.ReviewActivity"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
      android:layout_marginBottom="12dp"
    android:text="Please spare few minutes to share your honest interview experience if you have got placement/Internship offer!"/>


        <!--Student Name-->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name"
            android:layout_width="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/studName"
                android:layout_width="match_parent"
                android:hint="Name"
                android:padding="4dp"
                android:maxLines="1"
                android:inputType="text|textCapWords"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_height="45dp" />
        </android.support.design.widget.TextInputLayout>



        <!--Branch-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="15dp"
                android:layout_weight="4"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_vertical"
                android:text="Branch" />
            <Spinner
                android:id="@+id/branch"
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:dropDownVerticalOffset="-53dp"
                android:spinnerMode="dialog"></Spinner>
        </LinearLayout>

        <!--whatsapp Number-->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_whatsapp"
            android:layout_width="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/whatsappNum"
            android:hint="Whatsapp no."
            android:autoLink="phone"
            android:padding="4dp"
            android:maxLines="1"
            android:inputType="phone"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"/></android.support.design.widget.TextInputLayout>

        <!--LinkedIn Id-->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_linkedin"
            android:layout_width="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content">
       <EditText
        android:id="@+id/linkedInId"
           android:layout_width="match_parent"
           android:hint="Linked In Id"
           android:padding="4dp"
           android:maxLines="1"
           android:inputType="textUri"
           android:layout_marginTop="2dp"
           android:layout_marginBottom="2dp"
           android:layout_height="45dp" /></android.support.design.widget.TextInputLayout>

        <!--is Internship review-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_around_edittext"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:text="Note: Switch the below toggle button if it is an internship review"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="14dp"
                android:textColor="#000"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:text="Internship:" />
            <Switch
                android:id="@+id/isInternshipReview"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:checked="false"
                android:layout_marginRight="2dp"
                android:textOn="On"
                android:layout_weight="1"
                android:textOff="Off"
                android:textSize="15sp"/>
        </LinearLayout></LinearLayout>

        <!--Company Name-->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_company"
            android:layout_width="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/companyName"
            android:hint="Company name:"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:padding="4dp"
            android:inputType="text|textCapWords"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="45dp"/></android.support.design.widget.TextInputLayout>

        <!--Job Title-->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_job"
            android:layout_width="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/jobTitle"
            android:hint="Job Title"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:padding="4dp"
            android:inputType="text|textCapWords"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="45dp"/></android.support.design.widget.TextInputLayout>

        <!--Interned At-->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_intern"
            android:layout_width="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/internCompany"
            android:layout_width="match_parent"
            android:hint="Interned at:"
            android:padding="4dp"
            android:maxLines="1"
            android:inputType="text|textCapWords"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_height="45dp" /></android.support.design.widget.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_around_edittext"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="3dp"
        android:textColor="#000"
        android:layout_weight="3"
        android:text="Upload Profile Image:" />
    <ImageButton
        android:id="@+id/photoPickerButton"
        android:layout_width="20dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:background="@drawable/upload_image" />
 </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:padding="4dp"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:text="Interview Experience"/>

        <!--Project Description-->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_project"
            android:layout_width="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content">
    <EditText
        android:id="@+id/projectDesc"
        android:hint="Project description"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:padding="10dp"
        android:layout_weight="1"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLength="2000"
        android:maxLines="10"
        android:gravity="top|left"
        android:minLines="1"
        android:scrollHorizontally="false"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:overScrollMode="always"
        android:layout_height="wrap_content"/></android.support.design.widget.TextInputLayout>

        <!--Online Round-->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_online"
            android:layout_width="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content">
    <EditText
        android:id="@+id/onlineRound"
        android:hint="Online Round"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:padding="10dp"
        android:layout_weight="1"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLength="2000"
        android:maxLines="10"
        android:gravity="top|left"
        android:minLines="1"
        android:scrollHorizontally="false"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:overScrollMode="always"
        android:layout_height="wrap_content"/></android.support.design.widget.TextInputLayout>

        <!--Technical Round-->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_tech"
            android:layout_width="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content">
   <EditText
    android:id="@+id/techRound"
       android:hint="Technical Round"
       android:layout_width="match_parent"
       android:layout_marginTop="2dp"
       android:layout_marginBottom="2dp"
       android:padding="10dp"
       android:layout_weight="1"
       android:inputType="textCapSentences|textMultiLine"
       android:maxLength="2000"
       android:maxLines="10"
       android:gravity="top|left"
       android:minLines="1"
       android:scrollHorizontally="false"
       android:scrollbarAlwaysDrawVerticalTrack="true"
       android:scrollbarStyle="insideInset"
       android:scrollbars="vertical"
       android:overScrollMode="always"
       android:layout_height="wrap_content"/></android.support.design.widget.TextInputLayout>

        <!--HR Round-->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_hr"
            android:layout_width="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content">
    <EditText
        android:id="@+id/hrRound"
        android:hint="HR Round"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:padding="10dp"
        android:layout_weight="1"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLength="2000"
        android:maxLines="10"
        android:gravity="top|left"
        android:minLines="1"
        android:scrollHorizontally="false"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:overScrollMode="always"
        android:layout_height="wrap_content"/></android.support.design.widget.TextInputLayout>

        <!--interview mode-->
     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
         android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:layout_marginRight="8dp"
                android:textColor="#000"
                android:textSize="14dp"
                android:layout_weight="3"
                android:layout_marginBottom="2dp"
                android:text="Interview Mode" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/interviewMode"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:dropDownVerticalOffset="-53dp"
                android:spinnerMode="dialog"></Spinner>
        </LinearLayout>

        <!--interview difficulty-->
      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:textSize="14dp"
                android:textColor="#000"
                android:layout_weight="3"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="2dp"
                android:text="Interview Difficulty" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/interviewDifficulty"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_weight="1"
                android:dropDownVerticalOffset="-53dp"
                android:spinnerMode="dialog"></Spinner>
        </LinearLayout>

        <!--Tips-->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_tips"
            android:layout_width="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/wordsToJr"
            android:hint="Tips"
            android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:padding="10dp"
            android:layout_weight="1"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLength="2000"
            android:maxLines="10"
            android:gravity="top|left"
            android:minLines="1"
            android:scrollHorizontally="false"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:overScrollMode="always"
            android:layout_height="wrap_content"/></android.support.design.widget.TextInputLayout>


        <!--Send Button-->
     <Button
         android:id="@+id/sendButton"
         android:layout_width="match_parent"
         android:padding="4dp"
         android:layout_height="50dp"
         android:layout_gravity="bottom"
         android:textSize="25dp"
         android:fontFamily="sans-serif-condensed"
         android:layout_marginTop="8dp"
         android:textColor="#fff"
         android:background="#073e03"
         android:layout_marginBottom="8dp"
         android:text="Send"/>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
</LinearLayout>
